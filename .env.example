# Server Configuration
HOST=0.0.0.0
PORT=1337

# Application Secrets
APP_KEYS=your_app_keys_here_comma_separated
API_TOKEN_SALT=your_api_token_salt_here
ADMIN_JWT_SECRET=your_admin_jwt_secret_here
TRANSFER_TOKEN_SALT=your_transfer_token_salt_here
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# Database Configuration
DATABASE_CLIENT=sqlite
DATABASE_HOST=your_database_host
DATABASE_PORT=your_database_port
DATABASE_NAME=your_database_name
DATABASE_USERNAME=your_database_username
DATABASE_PASSWORD=your_database_password
DATABASE_SSL=false
DATABASE_FILENAME=.tmp/data.db 

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.your_email_provider.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_app_specific_password

# Frontend Configuration
FRONTEND_URL=http://localhost:1337/api

# Unsubscribe Secret
UNSUBSCRIBE_SECRET=your_unsubscribe_secret_here

# Firebase Configuration (base64 encoded service account JSON)
FIREBASE_SERVICE_ACCOUNT=base64_encoded_firebase_service_account_json_here

Running the following command will generate the Firebase service account JSON:
#base64 -i config/firebaseServiceAccountKey.json | tr -d '\n'
#paste the output to the FIREBASE_SERVICE_ACCOUNT variable above
